<mah:MetroWindow x:Class="WpfTodoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTodoListApp"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="할 일 리스트앱" Height="350" Width="600" Loaded="MetroWindow_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        
        <!-- UI 구성 -->
        <DataGrid x:Name="GrdTodoItems" Grid.Column="0" Grid.Row="0" Margin="10" Background="Gainsboro" IsReadOnly="True"></DataGrid>

        <GroupBox Grid.Row="0" Grid.Column="1" Margin="5" Header="할 일 정보">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <!-- UI 구성 -->
                <!-- 아이디 -->
                <TextBox Grid.Row="0" x:Name="TxtId"
                         Margin="3" 
                         mah:TextBoxHelper.AutoWatermark="True"
                         mah:TextBoxHelper.Watermark="아이디"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         IsReadOnly="True" />

                <!-- 할 일 -->
                <TextBox Grid.Row="1" x:Name="TxtTitle"
                         Margin="3" 
                         mah:TextBoxHelper.AutoWatermark="True"
                         mah:TextBoxHelper.UseFloatingWatermark="True"
                         mah:TextBoxHelper.ClearTextButton="True"
                         mah:TextBoxHelper.Watermark="할 일" />

                <!-- 종료일 -->
                <DatePicker Grid.Row="2" x:Name="DtpTodoDate" 
                            Margin="3"
                            mah:TextBoxHelper.AutoWatermark="True"
                            mah:TextBoxHelper.UseFloatingWatermark="True"
                            mah:TextBoxHelper.Watermark="종료일" />

                <!-- 완료 여부 -->
                <ComboBox Grid.Row="3" x:Name="CboIsComplete"
                          Margin="3"
                          mah:TextBoxHelper.AutoWatermark="True"
                          mah:TextBoxHelper.Watermark="완료여부"
                          mah:TextBoxHelper.UseFloatingWatermark="True" >
                    <ComboBoxItem Content="완료" Tag="1"/>
                    <ComboBoxItem Content="미완료" Tag="0"/>
                </ComboBox>
                
                <!-- 버튼 -->
                <StackPanel Grid.Row="4" Margin="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnInsert" Content="추가" Width="60" Margin="0,5,3,5"
                            Style="{StaticResource MahApps.Styles.Button.Square}"/>
                    <Button x:Name="BtnUpdate" Content="수정" Width="60" Margin="0,5,3,5"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"/>
                    <Button x:Name="BtnDelete" Content="삭제" Width="60" Margin="0,5,0,5"
                            Style="{StaticResource MahApps.Styles.Button.Square.Highlight}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
    </Grid>
</mah:MetroWindow>
