@model MyPortfolioWebApp.Models.Board

@{
    ViewData["Title"] = "Create";
}

<section id="board" class="section">
    <div class="container section-title" data-aos="fade-up">
        <h2>자유게시판</h2>
        <p>자유롭게 글을 작성하고 소통할 수 있는 공간입니다</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <h4>새 글 작성</h4>
        <hr />
        <div class="row">
            <div class="col-md">
                <form asp-controller="Board" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- 숨겨진 필드들 -->
                    <input asp-for="PostDate" type="hidden" />
                    <input asp-for="ReadCount" type="hidden" />
                    
                    <div class="form-group mb-2">
                        <label asp-for="Email" class="control-label">이메일</label>
                        <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Writer" class="control-label">작성자</label>
                        <input asp-for="Writer" class="form-control" placeholder="이름을 입력해주세요" />
                        <span asp-validation-for="Writer" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Title" class="control-label">제목</label>
                        <input asp-for="Title" class="form-control" placeholder="제목을 입력해주세요" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="Contents" class="control-label">내용</label>
                        <textarea asp-for="Contents" class="form-control editor" rows="10" placeholder="본문내용"></textarea>
                        <span asp-validation-for="Contents" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="저장" class="btn btn-sm btn-success btn-kelly" />
                        <a asp-action="Index" class="btn btn-sm btn-success">리스트</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
