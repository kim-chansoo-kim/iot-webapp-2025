@using Westwind.AspNetCore.Markdown
@model MyPortfolioWebApp.Models.Board

@{
    ViewData["Title"] = "Delete";
}

<section id="board" class="section">
    <div class="container section-title" data-aos="fade-up">
        <h2>게시판</h2>
        <p>작성한 글을 삭제합니다</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div>
            <h4>삭제</h4>
            <h4>정말 삭제하시겠습니까?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Writer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Writer)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contents)
                </dt>
                <dd class="col-sm-10">
                    @Markdown.ParseHtmlString(Model.Contents)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PostDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PostDate)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReadCount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReadCount)
                </dd>
            </dl>

            <form asp-controller="Board" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="삭제" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-success">리스트</a>
            </form>
        </div>
    </div>
</section>
